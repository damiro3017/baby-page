---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import SectionContainer from "./SectionContainer.astro";
import LinkButton from "./LinkButton.astro";
const { imagePath, title, text, price } = Astro.props;
---

<Layout>
    <SectionContainer>
        <article class="grid grid-cols-2 gap-12">
            <Image
                src={imagePath}
                alt="Producto"
                class="w-full border-2 border-gray-300 rounded-2xl"
            />
            <div class="flex flex-col">
                <h2 class="text-3xl text-blue-300">{title}</h2>
                <p class="text-2xl font-medium mt-4">{price}</p>
                <p class="mt-2">⭐⭐⭐⭐⭐</p>
                <p class="mt-6">{text}</p>
                <LinkButton class="mt-8">Comprar</LinkButton>
            </div>
        </article>
    </SectionContainer>
</Layout>
