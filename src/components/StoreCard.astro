---
import { Image } from "astro:assets";
const { imagePath, link, title, price } = Astro.props;
import FavoriteIcon from "../assets/icons/FavoriteIcon.astro";
---

<a href={link}>
    <div class="relative">
        <Image
            src={imagePath}
            alt="Hola Mundo"
            class="rounded-3xl border-2 border-gray-200 cursor-pointer w-full h-72 object-cover"
        />
        <FavoriteIcon
            class="cursor-pointer hover:fill-red-600 hover:stroke-red-600 transition-all absolute top-4 right-4 size-6"
        />
    </div>
    <div class="flex flex-col mt-6 gap-2">
        <h3 class="text-2xl font-medium">{title}</h3>
        <p>{price}</p>
        <p>⭐⭐⭐⭐⭐</p>
    </div>
</a>
